<p id="notice"><%= notice %></p>

<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>

<table class="table table-bordered table-hover">
  <thread>
    <tr>
      <td>Nome</td>
      <td>Descrição</td>
      <td>Departamento</td>
      <td>Preço</td>
      <td>Quantidade</td>
      <td colspan="2">
    </tr>
    </thead>
    <tbody>
      <%= render @produtos_departamento %>
    </tbody>
</table>

<%= link_to 'Editar departamento', edit_departamento_path(@departamento), class:"btn btn-default" %>
<%= link_to 'Voltar', departamentos_path, class:"btn btn-default" %>